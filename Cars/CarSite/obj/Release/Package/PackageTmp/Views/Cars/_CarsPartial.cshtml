@using CarSite.ViewModel
@model CarsViewModel

<div class="col-md-4 col-xs-12 col-sm-6  " style="margin-top: 1em;">
    <div class="thumbnail shadow">
        <div class="row">
            <div class="caption">
                <div class="col-md-6 ">
                    <h5>@Model.CarManufacturer @Model.Model</h5>
                </div>
                <div class="col-md-6 ">
                    <h5><Text>Day Cost: </Text> @Model.DailyCost <text>&#8362;</text></h5>
                </div>


            </div>
        </div>
        <hr />

        <div>
            <img src="~/Images/Cars/@Model.Picture" class="img-responsive img-rounded " style="height: 150px" />
        </div>

        <div class="caption">
            <text>transmission:</text>  @Model.TransmissionType
        </div>

        <div class="row">
            <div class="col-md-5 pull-left ">
                <div>
                    
                    <form action="@Url.Action("Details")" method="post">
                        @Html.Hidden("sdate", (object)ViewBag.startdate.ToString())
                        @Html.Hidden("edate", (object)ViewBag.enddate.ToString())
                        @Html.Hidden("id", @Model.Id)
                       
                        <button class="btn btn-primary" type="submit">Select &raquo;</button>
                    </form>
                </div>
               
            </div>

        </div>

    </div>
</div>
